
[Version]
signature = "$CHICAGO$"
Minimal Windows Cursors by Jo (v1.0)


[DefaultInstall]
CopyFiles = Scheme.Cur
AddReg    = Scheme.Reg, Wreg


[DestinationDirs]
Scheme.Cur = 10, "%CUR_DIR%"


[Scheme.Reg]
HKCU, "Control Panel\Cursors\Schemes", "%SCHEME_NAME%", , "%10%\%CUR_DIR%\%pointer%, %10%\%CUR_DIR%\%help%, %10%\%CUR_DIR%\%working%, %10%\%CUR_DIR%\%busy%, %10%\%CUR_DIR%\%precision%, %10%\%CUR_DIR%\%text%, %10%\%CUR_DIR%\%pen%, %10%\%CUR_DIR%\%unavailable%, %10%\%CUR_DIR%\%vertical%, %10%\%CUR_DIR%\%horizontal%, %10%\%CUR_DIR%\%diagonal_1%, %10%\%CUR_DIR%\%diagonal_2%, %10%\%CUR_DIR%\%move%, %10%\%CUR_DIR%\%alternate%, %10%\%CUR_DIR%\%link%, %10%\%CUR_DIR%\%person%, %10%\%CUR_DIR%\%pin%"


[Wreg]
HKCU, "Control Panel\Cursors", , 0x00020000, "%SCHEME_NAME%"
HKCU, "Control Panel\Cursors", AppStarting, 0x00020000, "%10%\%CUR_DIR%\%working%"
HKCU, "Control Panel\Cursors", Arrow, 0x00020000, "%10%\%CUR_DIR%\%pointer%"
HKCU, "Control Panel\Cursors", Crosshair, 0x00020000, "%10%\%CUR_DIR%\%precision%"
HKCU, "Control Panel\Cursors", Hand,0x00020000, "%10%\%CUR_DIR%\%link%"
HKCU, "Control Panel\Cursors", Help,0x00020000, "%10%\%CUR_DIR%\%help%"
HKCU, "Control Panel\Cursors", IBeam,0x00020000, "%10%\%CUR_DIR%\%text%"
HKCU, "Control Panel\Cursors", No,0x00020000, "%10%\%CUR_DIR%\%unavailable%"
HKCU, "Control Panel\Cursors", NWPen,0x00020000, "%10%\%CUR_DIR%\%pen%"
HKCU, "Control Panel\Cursors", Person,0x00020000, "%10%\%CUR_DIR%\%person%"
HKCU, "Control Panel\Cursors", Pin,0x00020000, "%10%\%CUR_DIR%\%pin%"
HKCU, "Control Panel\Cursors", SizeAll, 0x00020000, "%10%\%CUR_DIR%\%move%"
HKCU, "Control Panel\Cursors", SizeNESW, 0x00020000, "%10%\%CUR_DIR%\%diagonal_2%"
HKCU, "Control Panel\Cursors", SizeNS, 0x00020000, "%10%\%CUR_DIR%\%vertical%"
HKCU, "Control Panel\Cursors", SizeNWSE, 0x00020000, "%10%\%CUR_DIR%\%diagonal_1%"
HKCU, "Control Panel\Cursors", SizeWE, 0x00020000, "%10%\%CUR_DIR%\%horizontal%"
HKCU, "Control Panel\Cursors", UpArrow, 0x00020000, "%10%\%CUR_DIR%\%alternate%"
HKCU, "Control Panel\Cursors", Wait, 0x00020000, "%10%\%CUR_DIR%\%busy%"
HKLM, "SOFTWARE\Microsoft\Windows\CurrentVersion\RunOnce\Setup\", "", , "rundll32.exe shell32.dll,Control_RunDLL main.cpl @0,1"


[Scheme.Cur]
"alternate.cur"
"busy.ani"
"diagonal_1.cur"
"diagonal_2.cur"
"help.cur"
"horizontal.cur"
"link.cur"
"move.cur"
"pen.cur"
"person.cur"
"pin.cur"
"pointer.cur"
"precision.cur"
"text.cur"
"unavailable.cur"
"vertical.cur"
"working.ani"


[Strings]
CUR_DIR     = "Cursors\Cursors_Jo_v1.0"
SCHEME_NAME = "Cursors by Jo (v1.0)"
alternate	= "alternate.cur"
busy		= "busy.ani"
diagonal_1	= "diagonal_1.cur"
diagonal_2	= "diagonal_2.cur"
help		= "help.cur"
horizontal	= "horizontal.cur"
link		= "link.cur"
move		= "move.cur"
pen 		= "pen.cur"
person      = "person.cur"
pin         = "pin.cur"
pointer		= "pointer.cur"
precision	= "precision.cur"
text		= "text.cur"
unavailable	= "unavailable.cur"
vertical	= "vertical.cur"   
